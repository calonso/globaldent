          </div>
        {/foreach}
          <div class="lineapubli">
            <p class="opcionespubli">
              <a href={$req_base}index.php/cod.listaarticulos>{#vertodos#}</a>
            </p>
          </div>
        </div>
      {else}
        <p>{#noarticulos#}</p>
      {/if}
    </fieldset>
  </div>
  
  {include file=$tpl_path_base|cat:"common/recuadro_header.phtml"}
    <li><a href={$req_base}index.php/cod.colgartesis>{#colgartesis#}</a></li>
    <li><a href={$req_base}index.php/cod.colgarlibro>{#colgarlibro#}</a></li>
    <li><a href={$req_base}index.php/cod.colgarcaso>{#colgarcaso#}</a></li>
    <li><a href={$req_base}index.php/cod.colgararticulo>{#colgararticulo#}</a></li>
    <li>
      <form enctype="multipart/form-data" method="POST" action={$req_base}index.php/cod.buscarpubli>
        <input type="text" name="txtBuscar">
        <input type="submit" value={#buscar#}>
      </form>
    </li>
    <li><a href={$req_base}index.php/cod.verpubli>{#verpubli#}</a></li>
  {include file=$tpl_path_base|cat:"common/recuadro_footer.phtml"}
  
</div>

{include file=$tpl_path_base|cat:"common/footer.phtml"}