{config_load file=$lang_file section="publicaciones"}

{include file=$tpl_path_base|cat:"common/header.phtml"}

<div class="contenedor">
  <div class="col_central">
    <span class="intro">{#intro#}</span>
    <fieldset><legend>{#tesis#}</legend>
      {if $num_tesis > 0}
        <div class="tablapubli">
        {foreach from=$tesis item=elemento}
          <div class="lineapubli">
            <p class="publicacion">
              <span><a href={$req_base}index.php/cod.vertesis/id.{$elemento.id_tesis}>{$elemento.titulo}</a></span>
              {#escrita#}{$elemento.autor}
            </p>
            <p class="publiusu">
              {#publicada#}{$elemento.usuario}<br />
              {#cuando#}{$elemento.fecha}
            </p>
          </div>
        {/foreach}
          <div class="lineapubli">
            <p class="opcionespubli">
              <a href={$req_base}index.php/cod.listatesis>{#vertodas#}</a>
            </p>
          </div>
        </div>
      {else}
        <p>{#notesis#}</p>
      {/if}
    </fieldset>
    <fieldset><legend>{#libros#}</legend>
      {if $num_libros > 0}
        <div class="tablapubli">
        {foreach from=$libros item=elemento}
