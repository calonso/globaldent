              {#escrito#}{$elemento.autor}
            </p>
            <p class="publiusu">
              {#publicado#}{$elemento.usuario}<br />
              {#cuando#}{$elemento.fecha}
            </p>
          </div>
        {/foreach}
          <div class="lineapubli">
            <p class="opcionespubli">
              <a href={$req_base}index.php/cod.listalibros>{#vertodos#}</a>
            </p>
          </div>
        </div>
      {else}
        <p>{#nolibros#}</p>
      {/if}
    </fieldset>
    <fieldset><legend>{#casos#}</legend>
      {if $num_casos > 0}
        <div class="tablapubli">
        {foreach from=$casos item=elemento}
          <div class="lineapubli">
            <p class="publicacion">
              <span><a href={$req_base}index.php/cod.vercaso/id.{$elemento.id_caso}>{$elemento.titulo}</a></span>
              {#escrito#}{$elemento.autor}
            </p>
            <p class="publiusu">
              {#publicado#}{$elemento.usuario}<br />
              {#cuando#}{$elemento.fecha}
            </p>
          </div>
        {/foreach}
          <div class="lineapubli">
            <p class="opcionespubli">
              <a href={$req_base}index.php/cod.listacasos>{#vertodos#}</a>
            </p>
          </div>
        </div>
      {else}
        <p>{#nocasos#}</p>
      {/if}
    </fieldset>
    <fieldset><legend>{#articulos#}</legend>
      {if $num_articulos > 0}
        <div class="tablapubli">
        {foreach from=$articulos item=elemento}
          <div class="lineapubli">
            <p class="publicacion">
              <span><a href={$req_base}index.php/cod.verarticulo/id.{$elemento.id_articulo}>{$elemento.titulo}</a></span>
              {#escrito#}{$elemento.autor}
            </p>
            <p class="publiusu">
